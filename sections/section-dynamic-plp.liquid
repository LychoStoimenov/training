<div class="collection-dynamic">
  <div class="shell">
    <div class="collection__actions">
      <div class="collection__search">
        <label for="input-pdp">Find product by handle or ID</label>

        <div class="collection__search-field">
          <input type="text" class="js-find-pdp" id="input-pdp">

          <button class="js-find-pdp-btn">
            <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
              <path d="M508.5 468.9L387.1 347.5c-2.3-2.3-5.3-3.5-8.5-3.5h-13.2c31.5-36.5 50.6-84 50.6-136C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c52 0 99.5-19.1 136-50.6v13.2c0 3.2 1.3 6.2 3.5 8.5l121.4 121.4c4.7 4.7 12.3 4.7 17 0l22.6-22.6c4.7-4.7 4.7-12.3 0-17zM208 368c-88.4 0-160-71.6-160-160S119.6 48 208 48s160 71.6 160 160-71.6 160-160 160z"/>
            </svg>
          </button>
        </div>
        <!-- /.collection__search-field -->

        <p class="js-find-pdp-error collection__error">

        </p>
        <!-- /.js-find-pdp-error -->
      </div>

      <div class="collection__filters">
        <div class="collection__filter-price collection__filter">
          <button class="collection__filter-btn">Filters</button>

          <div class="filter-price">
            <div class="filter__inner">
              <div class="filter__field">
                <input type="number" name="filter_min_price" id="filter_min_price" class="js-filter-min-price">

                <label for="filter_min_price">Min</label>
              </div>
              <!-- /.filter__field -->

              <span class="filter__dash">-</span>

              <div class="filter__field">
                <input type="number" name="filter_max_price" id="filter_max_price" class="js-filter-max-price">

                <label for="filter_max_price">Max</label>
              </div>
              <!-- /.filter__field -->
            </div>
            <!-- /.filter__inner -->

            <button class="filter__apply js-filter-price">
              Apply
            </button>
          </div>
          <!-- /.filter-price -->
        </div>
        <!-- /.collection__filter-price -->
        <div class="collection__views">
          <button class="js-grid-view is-active">
            <svg width="20" height="20" viewBox="0 0 52 52" xmlns="http://www.w3.org/2000/svg">
              <path d="M14,16H2a2,2,0,0,1-2-2V2A2,2,0,0,1,2,0H14a2,2,0,0,1,2,2V14A2,2,0,0,1,14,16ZM4,12h8V4H4Z"/><path d="M14,34H2a2,2,0,0,1-2-2V20a2,2,0,0,1,2-2H14a2,2,0,0,1,2,2V32A2,2,0,0,1,14,34ZM4,30h8V22H4Z"/><path d="M14,52H2a2,2,0,0,1-2-2V38a2,2,0,0,1,2-2H14a2,2,0,0,1,2,2V50A2,2,0,0,1,14,52ZM4,48h8V40H4Z"/><path d="M32,16H20a2,2,0,0,1-2-2V2a2,2,0,0,1,2-2H32a2,2,0,0,1,2,2V14A2,2,0,0,1,32,16ZM22,12h8V4H22Z"/><path d="M32,34H20a2,2,0,0,1-2-2V20a2,2,0,0,1,2-2H32a2,2,0,0,1,2,2V32A2,2,0,0,1,32,34ZM22,30h8V22H22Z"/><path d="M32,52H20a2,2,0,0,1-2-2V38a2,2,0,0,1,2-2H32a2,2,0,0,1,2,2V50A2,2,0,0,1,32,52ZM22,48h8V40H22Z"/><path d="M50,16H38a2,2,0,0,1-2-2V2a2,2,0,0,1,2-2H50a2,2,0,0,1,2,2V14A2,2,0,0,1,50,16ZM40,12h8V4H40Z"/><path d="M50,34H38a2,2,0,0,1-2-2V20a2,2,0,0,1,2-2H50a2,2,0,0,1,2,2V32A2,2,0,0,1,50,34ZM40,30h8V22H40Z"/><path d="M50,52H38a2,2,0,0,1-2-2V38a2,2,0,0,1,2-2H50a2,2,0,0,1,2,2V50A2,2,0,0,1,50,52ZM40,48h8V40H40Z"/>
            </svg>
          </button>

          <button class="js-list-view">
            <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
              <path d="M80 48H16A16 16 0 0 0 0 64v64a16 16 0 0 0 16 16h64a16 16 0 0 0 16-16V64a16 16 0 0 0-16-16zm0 160H16a16 16 0 0 0-16 16v64a16 16 0 0 0 16 16h64a16 16 0 0 0 16-16v-64a16 16 0 0 0-16-16zm0 160H16a16 16 0 0 0-16 16v64a16 16 0 0 0 16 16h64a16 16 0 0 0 16-16v-64a16 16 0 0 0-16-16zm416-136H176a16 16 0 0 0-16 16v16a16 16 0 0 0 16 16h320a16 16 0 0 0 16-16v-16a16 16 0 0 0-16-16zm0 160H176a16 16 0 0 0-16 16v16a16 16 0 0 0 16 16h320a16 16 0 0 0 16-16v-16a16 16 0 0 0-16-16zm0-320H176a16 16 0 0 0-16 16v16a16 16 0 0 0 16 16h320a16 16 0 0 0 16-16V88a16 16 0 0 0-16-16z"/>
            </svg>
          </button>
        </div>
      </div>
      <!-- /.collection__filters -->
    </div>

    <div class="js-dynamic-collection-content">

    </div>

    <div class="collection__foot">
      <button class="js-add-more-items is-hidden btn">
        Load More
      </button>

      <button class="js-add-more-filtered-items is-hidden btn">
        Load More
      </button>
    </div>
    <!-- /.collection__foot -->
  </div>
</div>


